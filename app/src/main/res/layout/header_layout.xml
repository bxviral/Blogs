<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="14dp"
    android:background="@color/purple_500"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/splashCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_45sdp"
        app:cardElevation="@dimen/_24sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/headerDashImage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_flat_color_icons_google" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/headerTxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Viral"
        android:textSize="@dimen/_30ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/itim_regular"
        app:layout_constraintEnd_toEndOf="@+id/splashCardView"
        app:layout_constraintStart_toStartOf="@+id/splashCardView"
        app:layout_constraintTop_toBottomOf="@+id/splashCardView" />




</androidx.constraintlayout.widget.ConstraintLayout>